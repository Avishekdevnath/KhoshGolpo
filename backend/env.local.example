FRONTEND_URL=http://localhost:3000
# Comma separate multiple origins if needed, e.g. http://localhost:3000,http://localhost:5173

REDIS_URL=redis://localhost:6379
# Set REDIS_TLS_ENABLED=true when connecting to providers that require TLS (e.g. Upstash)
